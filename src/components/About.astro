---
// About section - Personal story and background
import { translations } from '../i18n/translations';
const en = translations.en;
const de = translations.de;
---

<section id="about" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-4xl mx-auto">
    <!-- English Title -->
    <h2 data-lang="en" class="text-4xl font-bold mb-12 text-center text-gray-900 dark:text-gray-100">{en.about.title}</h2>

    <!-- German Title -->
    <h2 data-lang="de" class="text-4xl font-bold mb-12 text-center text-gray-900 dark:text-gray-100">{de.about.title}</h2>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Personal story -->
      <div class="space-y-6">
        <!-- English paragraphs -->
        <p data-lang="en" class="text-gray-700 dark:text-gray-300 leading-relaxed">
          {en.about.paragraph1}
        </p>

        <p data-lang="en" class="text-gray-700 dark:text-gray-300 leading-relaxed">
          {en.about.paragraph2}
        </p>

        <p data-lang="en" class="text-gray-700 dark:text-gray-300 leading-relaxed">
          {en.about.paragraph3}
        </p>

        <!-- German paragraphs -->
        <p data-lang="de" class="text-gray-700 dark:text-gray-300 leading-relaxed">
          {de.about.paragraph1}
        </p>

        <p data-lang="de" class="text-gray-700 dark:text-gray-300 leading-relaxed">
          {de.about.paragraph2}
        </p>

        <p data-lang="de" class="text-gray-700 dark:text-gray-300 leading-relaxed">
          {de.about.paragraph3}
        </p>
      </div>

      <!-- Quick facts / Highlights -->
      <div class="space-y-4">
        <!-- English Focus Areas -->
        <div data-lang="en" class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-sm border border-gray-100 dark:border-gray-600">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            {en.about.focusAreasTitle}
          </h3>
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.focusAreas.mobile}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.focusAreas.frontend}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.focusAreas.ai}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.focusAreas.agile}</span>
            </li>
          </ul>
        </div>

        <!-- German Focus Areas -->
        <div data-lang="de" class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-sm border border-gray-100 dark:border-gray-600">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            {de.about.focusAreasTitle}
          </h3>
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.focusAreas.mobile}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.focusAreas.frontend}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.focusAreas.ai}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.focusAreas.agile}</span>
            </li>
          </ul>
        </div>

        <!-- English Currently Learning -->
        <div data-lang="en" class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-sm border border-gray-100 dark:border-gray-600">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            {en.about.currentlyLearningTitle}
          </h3>
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.learning.react}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.learning.backend}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{en.about.learning.patterns}</span>
            </li>
          </ul>
        </div>

        <!-- German Currently Learning -->
        <div data-lang="de" class="bg-white dark:bg-gray-700 p-6 rounded-xl shadow-sm border border-gray-100 dark:border-gray-600">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            {de.about.currentlyLearningTitle}
          </h3>
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.learning.react}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.learning.backend}</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gray-400 dark:text-gray-500">•</span>
              <span>{de.about.learning.patterns}</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
