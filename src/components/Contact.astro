---
// Contact section - Get in touch
import { translations } from '../i18n/translations';

const en = translations.en;
const de = translations.de;
---

<section id="contact" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold mb-4 text-center text-gray-900 dark:text-gray-100">
      <span data-lang="en">{en.contact.title}</span>
      <span data-lang="de">{de.contact.title}</span>
    </h2>
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
      <span data-lang="en">{en.contact.subtitle}</span>
      <span data-lang="de">{de.contact.subtitle}</span>
    </p>

    <div class="grid md:grid-cols-2 gap-8 mb-12">
      <!-- Email -->
      <a
        href="mailto:marvin.espeter@example.com"
        class="group bg-white dark:bg-gray-700 rounded-xl p-8 hover:shadow-lg transition-all border border-gray-100 dark:border-gray-600 hover:border-gray-900 dark:hover:border-gray-400"
      >
        <div class="w-12 h-12 bg-gray-900 dark:bg-gray-100 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-white dark:text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
          <span data-lang="en">{en.contact.email.title}</span>
          <span data-lang="de">{de.contact.email.title}</span>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-2">
          <span data-lang="en">{en.contact.email.description}</span>
          <span data-lang="de">{de.contact.email.description}</span>
        </p>
        <p class="text-gray-900 dark:text-gray-100 font-medium">marvin.espeter@example.com</p>
        <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">
          <span data-lang="en">{en.contact.email.action}</span>
          <span data-lang="de">{de.contact.email.action}</span>
        </p>
      </a>

      <!-- LinkedIn -->
      <a
        href="https://linkedin.com/in/marvin-espeter"
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-white dark:bg-gray-700 rounded-xl p-8 hover:shadow-lg transition-all border border-gray-100 dark:border-gray-600 hover:border-blue-600 dark:hover:border-blue-500"
      >
        <div class="w-12 h-12 bg-blue-600 dark:bg-blue-500 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
          <span data-lang="en">{en.contact.linkedin.title}</span>
          <span data-lang="de">{de.contact.linkedin.title}</span>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-2">
          <span data-lang="en">{en.contact.linkedin.description}</span>
          <span data-lang="de">{de.contact.linkedin.description}</span>
        </p>
        <p class="text-blue-600 dark:text-blue-400 font-medium">linkedin.com/in/marvin-espeter</p>
        <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">
          <span data-lang="en">{en.contact.linkedin.action}</span>
          <span data-lang="de">{de.contact.linkedin.action}</span>
        </p>
      </a>

      <!-- GitHub -->
      <a
        href="https://github.com/marvinespeter"
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-white dark:bg-gray-700 rounded-xl p-8 hover:shadow-lg transition-all border border-gray-100 dark:border-gray-600 hover:border-gray-900 dark:hover:border-gray-100 cursor-not-allowed opacity-75"
      >
        <div class="w-12 h-12 bg-gray-900 dark:bg-gray-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-white dark:text-gray-900" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
          <span data-lang="en">{en.contact.github.title}</span>
          <span data-lang="de">{de.contact.github.title}</span>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-2">
          <span data-lang="en">{en.contact.github.description}</span>
          <span data-lang="de">{de.contact.github.description}</span>
        </p>
        <p class="text-gray-500 dark:text-gray-500 font-medium italic">
          <span data-lang="en">{en.contact.github.status}</span>
          <span data-lang="de">{de.contact.github.status}</span>
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">
          <span data-lang="en">{en.contact.github.action}</span>
          <span data-lang="de">{de.contact.github.action}</span>
        </p>
      </a>

      <!-- CV Download -->
      <div class="group bg-white dark:bg-gray-700 rounded-xl p-8 border border-gray-100 dark:border-gray-600 cursor-not-allowed opacity-75">
        <div class="w-12 h-12 bg-gray-900 dark:bg-gray-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-white dark:text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
          <span data-lang="en">{en.contact.cv.title}</span>
          <span data-lang="de">{de.contact.cv.title}</span>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-2">
          <span data-lang="en">{en.contact.cv.description}</span>
          <span data-lang="de">{de.contact.cv.description}</span>
        </p>
        <p class="text-gray-500 dark:text-gray-500 font-medium italic">
          <span data-lang="en">{en.contact.cv.status}</span>
          <span data-lang="de">{de.contact.cv.status}</span>
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">
          <span data-lang="en">{en.contact.cv.format}</span>
          <span data-lang="de">{de.contact.cv.format}</span>
        </p>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-700 rounded-xl p-8 border border-gray-200 dark:border-gray-600">
      <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-center">
        <span data-lang="en">{en.contact.closingText}</span>
        <span data-lang="de">{de.contact.closingText}</span>
      </p>
    </div>
  </div>
</section>
