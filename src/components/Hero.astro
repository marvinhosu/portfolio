---
// Hero section - First impression
import { translations } from '../i18n/translations';
const en = translations.en;
const de = translations.de;
---

<section id="hero" class="relative min-h-screen flex items-center justify-center px-4 py-20">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Avatar placeholder -->
    <div class="mb-8 inline-block">
      <div class="w-32 h-32 rounded-full bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 flex items-center justify-center text-4xl font-bold text-gray-600 dark:text-gray-300">
        ME
      </div>
    </div>

    <!-- Name and Title - English -->
    <h1 data-lang="en" class="text-5xl md:text-6xl font-bold mb-4 text-gray-900 dark:text-gray-100">
      {en.hero.name}
    </h1>

    <p data-lang="en" class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8 font-light">
      {en.hero.title}
    </p>

    <!-- Brief intro - English -->
    <p data-lang="en" class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-12 leading-relaxed">
      {en.hero.intro}
    </p>

    <!-- Name and Title - German -->
    <h1 data-lang="de" class="text-5xl md:text-6xl font-bold mb-4 text-gray-900 dark:text-gray-100">
      {de.hero.name}
    </h1>

    <p data-lang="de" class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8 font-light">
      {de.hero.title}
    </p>

    <!-- Brief intro - German -->
    <p data-lang="de" class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-12 leading-relaxed">
      {de.hero.intro}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <!-- English buttons -->
      <a
        data-lang="en"
        href="#projects"
        class="inline-block px-8 py-3 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 font-medium rounded-lg hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors"
      >
        {en.hero.viewWorkButton}
      </a>
      <a
        data-lang="en"
        href="#contact"
        class="inline-block px-8 py-3 border-2 border-gray-900 dark:border-gray-100 text-gray-900 dark:text-gray-100 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
      >
        {en.hero.contactButton}
      </a>

      <!-- German buttons -->
      <a
        data-lang="de"
        href="#projects"
        class="inline-block px-8 py-3 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 font-medium rounded-lg hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors"
      >
        {de.hero.viewWorkButton}
      </a>
      <a
        data-lang="de"
        href="#contact"
        class="inline-block px-8 py-3 border-2 border-gray-900 dark:border-gray-100 text-gray-900 dark:text-gray-100 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
      >
        {de.hero.contactButton}
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="mt-16">
      <a href="#about" class="inline-block animate-bounce">
        <svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </a>
    </div>
  </div>
</section>
