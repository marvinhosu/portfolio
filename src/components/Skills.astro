              <span class="inline-block px-3 py-1 bg-white dark:bg-gray-800 rounded-full text-sm text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Certifications -->
    <div class="mt-16">
      <!-- English Certifications Title -->
      <h3 class="text-2xl font-bold mb-6 text-center text-gray-900 dark:text-gray-100" data-lang="en">{en.skills.certificationsTitle}</h3>
