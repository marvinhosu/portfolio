<section id="skills" class="py-20 px-4 bg-white dark:bg-gray-800">
  <div class="max-w-6xl mx-auto">
    <!-- English Title -->
    <h2 class="text-4xl font-bold mb-4 text-center text-gray-900 dark:text-gray-100" data-lang="en">{en.skills.title}</h2>
    <!-- German Title -->
    <h2 class="text-4xl font-bold mb-4 text-center text-gray-900 dark:text-gray-100" data-lang="de">{de.skills.title}</h2>

    <!-- English Subtitle -->
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto" data-lang="en">
      {en.skills.subtitle}
    </p>
    <!-- German Subtitle -->
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto" data-lang="de">
      {de.skills.subtitle}
    </p>

    <!-- English Skills Categories -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-lang="en">
      {skillCategoriesEn.map((category) => (
        <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6 hover:shadow-lg transition-shadow border border-gray-100 dark:border-gray-600">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-gray-900 dark:bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white dark:text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.icon} />
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-gray-100">{category.title}</h3>
          </div>

          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="inline-block px-3 py-1 bg-white dark:bg-gray-800 rounded-full text-sm text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- German Skills Categories -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-lang="de">
      {skillCategoriesDe.map((category) => (
        <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6 hover:shadow-lg transition-shadow border border-gray-100 dark:border-gray-600">
