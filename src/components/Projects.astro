---
// Projects section - Showcase of work
import { translations } from '../i18n/translations';

const en = translations.en;
const de = translations.de;

const projectsEn = [
  {
    title: en.projects.projectList.reminderApp.title,
    description: en.projects.projectList.reminderApp.description,
    technologies: en.projects.projectList.reminderApp.tech,
    highlights: en.projects.projectList.reminderApp.features,
    type: en.projects.projectList.reminderApp.category,
    status: en.projects.projectList.reminderApp.status
  },
  {
    title: en.projects.projectList.healthcareApp.title,
    description: en.projects.projectList.healthcareApp.description,
    technologies: en.projects.projectList.healthcareApp.tech,
    highlights: en.projects.projectList.healthcareApp.features,
    type: en.projects.projectList.healthcareApp.category,
    status: en.projects.projectList.healthcareApp.status
  },
  {
    title: en.projects.projectList.portfolio.title,
    description: en.projects.projectList.portfolio.description,
    technologies: en.projects.projectList.portfolio.tech,
    highlights: en.projects.projectList.portfolio.features,
    type: en.projects.projectList.portfolio.category,
    status: en.projects.projectList.portfolio.status
  }
];

const projectsDe = [
  {
    title: de.projects.projectList.reminderApp.title,
    description: de.projects.projectList.reminderApp.description,
    technologies: de.projects.projectList.reminderApp.tech,
    highlights: de.projects.projectList.reminderApp.features,
    type: de.projects.projectList.reminderApp.category,
    status: de.projects.projectList.reminderApp.status
  },
  {
    title: de.projects.projectList.healthcareApp.title,
    description: de.projects.projectList.healthcareApp.description,
    technologies: de.projects.projectList.healthcareApp.tech,
    highlights: de.projects.projectList.healthcareApp.features,
    type: de.projects.projectList.healthcareApp.category,
    status: de.projects.projectList.healthcareApp.status
  },
  {
    title: de.projects.projectList.portfolio.title,
    description: de.projects.projectList.portfolio.description,
    technologies: de.projects.projectList.portfolio.tech,
    highlights: de.projects.projectList.portfolio.features,
    type: de.projects.projectList.portfolio.category,
    status: de.projects.projectList.portfolio.status
  }
];
---

<section id="projects" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <!-- English Version -->
  <div class="max-w-6xl mx-auto" data-lang="en">
    <h2 class="text-4xl font-bold mb-4 text-center text-gray-900 dark:text-gray-100">{en.projects.title}</h2>
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
      {en.projects.subtitle}
    </p>

    <div class="space-y-8">
      {projectsEn.map((project, index) => (
        <div class="bg-white dark:bg-gray-700 rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow border border-gray-100 dark:border-gray-600">
          <div class="p-8">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100">{project.title}</h3>
                </div>
                <div class="flex flex-wrap gap-2 items-center">
                  <span class="inline-block px-3 py-1 bg-gray-100 dark:bg-gray-600 rounded-full text-sm font-medium text-gray-700 dark:text-gray-300">
                    {project.type}
                  </span>
                  <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${
                    project.status === 'Completed' || project.status.includes('Completed') || project.status.includes('Abgeschlossen')
                      ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 border border-green-200 dark:border-green-700'
                      : 'bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 border border-blue-200 dark:border-blue-700'
                  }`}>
                    {project.status}
                  </span>
                </div>
              </div>
            </div>

            <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
              {project.description}
            </p>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {en.projects.keyFeatures}
                </h4>
                <ul class="space-y-2">
                  {project.highlights.map((highlight) => (
                    <li class="flex items-start gap-2 text-gray-700 dark:text-gray-300">
                      <span class="text-gray-400 dark:text-gray-500 mt-1">•</span>
                      <span>{highlight}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div>
                <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                  {en.projects.technologies}
                </h4>
                <div class="flex flex-wrap gap-2">
                  {project.technologies.map((tech) => (
                    <span class="inline-block px-3 py-1 bg-gray-100 dark:bg-gray-600 rounded-lg text-sm text-gray-700 dark:text-gray-300">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center space-y-2">
      <p class="text-gray-600 dark:text-gray-400">
        {en.projects.moreProjectsNote}
      </p>
      <p class="text-sm text-gray-500 dark:text-gray-500 italic">
        {en.projects.githubNote}
      </p>
    </div>
  </div>

  <!-- German Version -->
  <div class="max-w-6xl mx-auto" data-lang="de">
    <h2 class="text-4xl font-bold mb-4 text-center text-gray-900 dark:text-gray-100">{de.projects.title}</h2>
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
      {de.projects.subtitle}
    </p>

    <div class="space-y-8">
      {projectsDe.map((project, index) => (
        <div class="bg-white dark:bg-gray-700 rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow border border-gray-100 dark:border-gray-600">
          <div class="p-8">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-4">
              <div class="flex-1">
